/*
Задайте одномерный массив, заполненный случайными числами.
Найдите сумму элементов, стоящих на нечётных позициях.

[3, 7, 23, 12] -> 19
[-4, -6, 89, 6] -> 0
*/

void FillArrayAuto(int[] collection) //Заполняем массив
{
    int length = collection.Length;
    int index = 0;
    while (index < length)
    {
        collection[index] = new Random().Next(-99, 100);
        index++;
    }
}

void PrintArray(int[] col) // Печатаем массив
{
    int count = col.Length;
    int position = 0;
    Console.Write("[");
    while (position < count - 1)
    {
        Console.Write(col[position] + "|");
        position++;
    }
    Console.Write(col[position]);
    Console.Write("]");
}

int SumOfOdd(int[] inArray)
{
    int sumOdd = inArray[1];
    int count = inArray.Length;
    for (int i = 3; i < count; i = i + 2)
    {
        sumOdd = sumOdd + inArray[i];
    }

    return sumOdd;
}

int SumOfEven(int[] inArray)
{
    int sumEven = inArray[0];
    int count = inArray.Length;
    for (int i = 2; i < count; i = i + 2)
    {
        sumEven = sumEven + inArray[i];
    }

    return sumEven;
}
Console.Clear();
// Запрашиваем размер массива
Console.Write("Введите размер массива (больше 1): ");
int dimension = Convert.ToInt32(Console.ReadLine());

if (dimension > 1) // Проверка что задается массив от 2 элементов и более
{
    // Создаем массив
    int[] array = new int[dimension];
    // Заполняем массив случайными числами с помощью ранее написанной функции
    FillArrayAuto(array);
    // Выводим массив на экран с помощью ранее написанной функции
    PrintArray(array);
    Console.WriteLine("");
    Console.WriteLine("");
    Console.WriteLine($"Сумма нечетных чисел массива равна: {SumOfOdd(array)}");
    Console.WriteLine($"Сумма четных чисел массива равна: {SumOfEven(array)}");
    Console.WriteLine("");
    Console.Write("Для выхода нажмите любую клавишу");
    Console.Read();
}
else
{
    Console.Write("Неверное число!");
}
